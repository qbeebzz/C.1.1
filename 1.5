using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    class Program
    {
        static void Main(string[] args)
        {
            int time;
            int waitTime = 10;
            int oldLadies;
            
            Console.Write("How many oldladies in a line - ");
            oldLadies = Convert.ToInt32(Console.ReadLine());
            time = oldLadies * waitTime;
            int hours = time / 60;
            int min = time % 60;

            Console.WriteLine("Waiting time " + hours + " hours and " + min + " minutes.");
            Console.ReadKey();
        }
    }
}
