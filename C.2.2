using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    class Program
    {
        static void Main(string[] args)
        {
            bool exit = true;
            
            while (exit)
            {
                Console.Write("Input 'exit' - ");
                string userInput = Console.ReadLine(); 

                if (userInput == "exit")
                {
                    exit = false;
                    Console.WriteLine("Exit!");
                }
                else
                {
                    Console.WriteLine("It's not exit!");
                }          
            }
            Console.ReadKey();
        }
    }
}
